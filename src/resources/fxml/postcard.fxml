<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 1em;" styleClass="elevated-2" stylesheets="@../css/cupertino-light.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nftspy.gui.PostCardController">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <children>
      <Label fx:id="title" styleClass="title-5" text="The post title" wrapText="true">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="date" style="-fx-text-fill: #808080;" text="Date">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <Label fx:id="content" text="The post content" wrapText="true">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="hashtags" layoutX="30.0" layoutY="64.0" style="-fx-text-fill: -color-accent-6;" text="#hashtag1 #hashtag2 #hashtag3" wrapText="true">
         <VBox.margin>
            <Insets bottom="15.0" left="20.0" right="20.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
